package warmup;

import java.util.Scanner;


public class Main {
	public static void main(String args[]){

	Scanner scan = new Scanner(System.in);
	//x,y는 -10000이상 10000이하의 정수 
	//r1,r2는 10000이하의 자연수
	int T=scan.nextInt();
	
	for(int i=0; i<T; i++){
		int x1=scan.nextInt();
		int x2=scan.nextInt();
		int y1=scan.nextInt();
		int y2=scan.nextInt();
		int r1=scan.nextInt();
		int r2=scan.nextInt();
		int d= r1 + r2 ;	
	
		// 1인 경우
		if(r1+r2==d){
			System.out.println("1");
		}
		// 0인 경우
		else if(r1+r2){
			System.out.println("0");
		}
		// 무한대인 경우
		else if(){
			System.out.println("-1");
		} 
		// 2인 경우
		else{
			System.out.println("2");
		}
		}
}
}
