package warmup;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner kb = new Scanner(System.in);
			int n = kb.nextInt();
			kb.close();
			for(int i=1; i<=n; i++){
				for(int j=0; j<i; j++){
					for(int z=0; z<n-i; z++){
						System.out.print(" ");
					}
					System.out.print("*");
				}
				System.out.println("");
			}
	}

}
